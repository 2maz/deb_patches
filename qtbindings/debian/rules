#!/usr/bin/make -f
#export DH_VERBOSE=1
#
# Uncomment to ignore all test failures (but the tests will run anyway)
#export DH_RUBY_IGNORE_TESTS=all
#
# Uncomment to ignore some test failures (but the tests will run anyway).
# Valid values:
#export DH_RUBY_IGNORE_TESTS=ruby1.9.1 ruby2.0 require-rubygems
#
# If you need to specify the .gemspec (eg there is more than one)
#export DH_RUBY_GEMSPEC=gem.gemspec

#rock_install_dir= needs to be added after applying the overlay throught the deb_package
%:
	dh $@ --buildsystem=ruby --with ruby

override_dh_link:
ifeq (,$(wildcard $(rock_install_dir)/lib/ruby/2.0.0))
	dh_link $(rock_install_dir)/lib/x86_64-linux-gnu/ruby/2.0.0 $(rock_install_dir)/lib/x86_64-linux-gnu/ruby/2.0
	dh_link $(rock_install_dir)/lib/ruby/2.0.0 $(rock_install_dir)/ruby/2.0
	dh_link $(rock_install_dir)/lib/arm-linux-gnueabi/ruby/2.0.0 $(rock_install_dir)/lib/arm-linux-gnueabi/ruby/2.0
endif
ifeq (,$(wildcard $(rock_install_dir)/lib/ruby/2.1.0))
	dh_link $(rock_install_dir)/lib/x86_64-linux-gnu/ruby/2.1.0 $(rock_install_dir)/lib/x86_64-linux-gnu/ruby/2.1
	dh_link $(rock_install_dir)/lib/ruby/2.1.0 $(rock_install_dir)/ruby/2.1
	dh_link $(rock_install_dir)/lib/arm-linux-gnueabi/ruby/2.1.0 $(rock_install_dir)/lib/arm-linux-gnueabi/ruby/2.1
endif
ifeq (,$(wildcard $(rock_install_dir)/lib/ruby/2.3.0))
	dh_link $(rock_install_dir)/lib/x86_64-linux-gnu/ruby/2.3.0 $(rock_install_dir)/lib/x86_64-linux-gnu/ruby/2.3
	dh_link $(rock_install_dir)/lib/ruby/2.3.0 $(rock_install_dir)/ruby/2.3
	dh_link $(rock_install_dir)/lib/arm-linux-gnueabi/ruby/2.3.0 $(rock_install_dir)/lib/arm-linux-gnueabi/ruby/2.3
endif

override_dh_shlibdeps:
	dh_shlibdeps -l$(shell pwd)/debian/ruby-qtbindings$(rock_install_dir)/lib/

